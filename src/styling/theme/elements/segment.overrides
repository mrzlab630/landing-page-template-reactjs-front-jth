/*******************************
         Theme Overrides
*******************************/

.ui.segments > .segment {
  top: 0px;
  bottom: 0px;
  border-radius: 0px;
  margin: 0em;
  width: auto;
  -webkit-box-shadow: none;
  box-shadow: none;
  border: none;
  border-top: 2px solid #F5F6F7;
}

.ui.raised.segments, .ui.raised.segment {
  border: 0px;
  box-shadow: 0px 2px 12px rgba(137, 138, 140, 0.1);   
}